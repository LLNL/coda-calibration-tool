<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="shape" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" stylesheets="@CommonGui.css, @FitPlot.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gov.llnl.gnem.apps.coda.calibration.gui.controllers.ShapeController">
	<children>
		<VBox>
			<children>
				<HBox prefWidth="200.0">
					<children>
						<Pane prefWidth="30.0" />
						<VBox>
							<children>
								<Label text="Frequency Band" />
								<ComboBox fx:id="frequencyBandCombo" prefWidth="150.0" />
							</children>
						</VBox>
						<Pane minWidth="15.0" />
						<VBox>
							<children>
								<Label />
	                			<Button fx:id="yAxisShrink" minWidth="20.0" mnemonicParsing="false">
	                               <tooltip>
	                                  <Tooltip text="Toggle Y-Axis shrink-to-data" />
	                               </tooltip>
	                   			</Button>
							</children>
						</VBox>										
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
					<padding>
						<Insets bottom="10.0" top="10.0" />
					</padding>
				</HBox>
				<ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
					<content>
								<StackPane fx:id="plotContainer" minHeight="50.0" minWidth="50.0" />
					</content>
				</ScrollPane>
			</children>
		</VBox>
	</children>
</StackPane>
